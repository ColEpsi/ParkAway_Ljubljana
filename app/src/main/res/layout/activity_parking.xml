<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkingActivity">

    <ImageView
        android:id="@+id/parking_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/ilirija"/>

    <TextView
        android:id="@+id/parking_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ilirija parking"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:gravity="center"
        android:textColor="#000000"
        tools:text="Ilirija parking"/>

    <TextView
        android:id="@+id/parking_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parkirišče se nahaja na križišču Tržaške in Šestove ulice. Na voljo je 200 parkirnih mest po ceni 0,40€ na uro."
        android:textColor="#6b42f4"
        android:textSize="20sp"
        android:textAlignment="center"
        tools:text="Parkirišče se nahaja na križišču Tržaške in Šestove ulice. Na voljo je 200 parkirnih mest po ceni 0,40€ na uro."/>

    <Button
        android:id="@+id/directions_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Navodila za pot"
        tools:text="Navodila za pot"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/parking_activity_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>